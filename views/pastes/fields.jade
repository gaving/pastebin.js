div.options
  p
    label language:
    select(name="paste[lang]")
      optgroup(label="text")
      option(value="plain") Plain
      option(value="diff") Diff
      optgroup(label="more")
      option(value="applescript") AppleScript
      option(value="as3") AS3
      option(value="bash") Bash
      option(value="coldfusion") ColdFusion
      option(value="cpp") Cpp
      option(value="csharp") CSharp
      option(value="css") CSS
      option(value="delphi") Delphi
      option(value="erlang") Erlang
      option(value="groovy") Groovy
      option(value="java") Java
      option(value="javafx") JavaFX
      option(value="jscript") JScript
      option(value="perl") Perl
      option(value="php") PHP
      option(value="plain") Plain
      option(value="python") Python
      option(value="ruby") Ruby
      option(value="sass") Sass
      option(value="scala") Scala
      option(value="sql") SQL
      option(value="vb") VB
      option(value="xml") XML
  p
    label title:
    input(name='paste[title]', value=paste.title || '')
  p
    label author:
    input(name='paste[author]', value=paste.author || '')
  p
    label theme:
    select(name="paste[theme]")
      option(value="Default") Default
      optgroup(label="more")
      option(value="Django") Django
      option(value="Eclipse") Eclipse
      option(value="Emacs") Emacs
      option(value="FadeToGrey") Fade To Grey
      option(value="Midnight") Midnight
      option(value="RDark") RDark
  p
    label private?
    input(title='only available via url', name='paste[private]', type='checkbox', checked=paste.private)
fieldset
  textarea(name='paste[body]', rows=80, cols=40, value=paste.body || '', type='body')
