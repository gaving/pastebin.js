link(rel='stylesheet', type='text/css', href='/css/sh/shTheme' + d.theme + '.css')
script(src='/js/show.js', type='text/javascript')

#status
  div.avatars
  span.back
    a(href='/' ) pastes
  div.pasteInfo
    - if (d.gravatar)
      span.avatar
        img(src=d.gravatar, title='gravatar')
    span.title
      a(href='/pastes/' + d.id)=d.title || 'Untitled'
  div.clear

section#content
  #pastes
    script(type='syntaxhighlighter', class='brush: ' + d.lang)=d.body
